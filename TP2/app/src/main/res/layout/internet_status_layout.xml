<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <Button
        android:text="Statut internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="44dp"
        android:id="@+id/internet_status_button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/internet_status_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp">

        <TextView
            android:text="statut internet inconnu"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:id="@+id/internet_status"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/internet_status_shape"
            android:backgroundTint="@color/colorPrimary"
            android:cropToPadding="false"
            android:id="@+id/internet_status_shape" />

    </LinearLayout>

</RelativeLayout>